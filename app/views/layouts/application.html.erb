<!DOCTYPE html>
<html>
  <head>
    <title>Meetbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/">
  <%= image_tag "logo.png", size: "30x30", class: "d-inline-block align-top", alt: "" %> Meetbrite</a>
    
    <div class="ml-auto">
      <span class="navbar-text nav-item mr-3"><a href="/events"> Events  </a></span>

  <% if current_user %>
      <span class="navbar-text nav-item mr-3"><a href="/users/<%= current_user.id %>"> Profile  </a></span>
      <span class="navbar-text nav-item"><a href="/logout">Logout</a></span>
    <% else %>
      <span class="navbar-text nav-item mr-3"><a href="/signup"> Sign Up  </a></span>
      <span class="navbar-text nav-item"><a href="/login"> Login  </a></span>
  <% end%>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
