<h1><%= @event.title %></h1>
<h4><%= @event.location %></h4>
<h4><%= @event.description %></h4>
<h4><%= @event.start %></h4>
<h4><%= @event.end %></h4>


 <!-- route not set up yet -->
 <% if @user %>
    <% if !@joined %>
        <%= button_to "Join Event", "/events/#{@event.id}/register"%>
    <% elsif @joined && @organizer %> 
        <%= button_to "Delete Event", event_path(@event), :method => "delete" %>
        <%= button_to "Update Event", edit_event_path(@event), :method => "get" %>
    <% else %>
        <%= button_to "Leave Event", "/events/#{@event.id}/unregister" %>
    <% end %>
<% else %>
    <p>You must be logged in to join this event</p>
    <%= button_to "Join Event", "/login", :method => "get"%>
<% end %>



