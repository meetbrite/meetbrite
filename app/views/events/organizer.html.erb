<h1>Organizer Page</h1>

<h3>You are the Organizer of the following events</h3>
<br>
<% @events.each do |event|%>
    <%= event.title %> 
    <ul class="list-group list-group-flush">
        <% event.members.each do |member| %>
            <li class="list-group-item"><a href="/users/<%=@user.id%>/direct_message/<%=member.id %>"><%= member.first_name%> <%=member.last_name %> </a></li>
        <% end %>
    </ul>
    
        <%= form_tag add_member_path  do %>
            <%= text_field_tag :email %>
            <%= hidden_field_tag "", params[:event_id] %>
            <%= submit_tag "Send", data: { disable_with: false }%>
        <% end %>
    
<%end%>